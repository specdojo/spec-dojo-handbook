{
  "name": "retail-starter",
  "version": "0.1.0",
  "description": "retail system starter package",
  "license": "MIT",
  "author": "naoji3x",
  "scripts": {
    "glossary:merge": "ts-node docs/tools/src/mergeGlossary.ts --root docs/glossary --out docs/glossary",
    "glossary:merge:validate": "ts-node docs/tools/src/mergeGlossary.ts --root docs/glossary --out docs/glossary --schema docs/tools/schemas/glossary.schema.json",
    "glossary:watch": "chokidar \"docs/glossary/glossary.*.yaml\" -i \"docs/glossary_merged_*\" -c \"npm run glossary:merge:validate\""
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "ajv": "^8.17.1",
    "chokidar-cli": "^3.0.0",
    "fast-glob": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "yaml": "^2.8.1"
  }
}
