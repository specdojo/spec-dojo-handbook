{
  "name": "grandma-candy-shop",
  "version": "0.1.0",
  "description": "grandma's candy shop system",
  "license": "MIT",
  "author": "naoji3x",
  "scripts": {
    "prepare": "lefthook install",
    "lint:md": "markdownlint '**/*.md'",
    "lint:md:fix": "markdownlint --fix '**/*.md'",
    "docs:toc": "tsx docs/tools/src/gen-toc.ts",
    "docs:dev": "vitepress dev docs --host 0.0.0.0 --port 5173",
    "docs:build:mermaid": "tsx docs/tools/src/gen-mermaid-svg.ts",
    "docs:rebuild:mermaid": "rm -f docs/public/mermaid/*.svg && npm run docs:build:mermaid",
    "docs:build": "npm run docs:build:mermaid && vitepress build docs",
    "fm:lint": "remark \"docs/**/*.{md,mdx}\" --quiet --frail"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/node": "^24.10.1",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "lefthook": "^2.0.2",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-lint": "^10.0.1",
    "remark-lint-frontmatter-schema": "^3.15.4",
    "remark-mdx": "^3.1.1",
    "remark-parse": "^11.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "unified": "^11.0.5",
    "vitepress": "^1.6.4",
    "vitepress-sidebar": "^1.33.0"
  }
}
